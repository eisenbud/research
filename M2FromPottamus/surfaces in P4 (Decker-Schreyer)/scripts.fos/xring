incr-set prlevel 1
if #0=3 START
incr-set prlevel -1
;;; Usage:
;;; 	<xring x p n
;;;
;;; creates a ring named x of characteristic p
;;; with n variables x[0]-x[n-1]
;;;
;;; (brief description)
;;;
incr-set prlevel 1
jump END
;;; Parameters:
;;;
;;; Output values:
;;;
;;; (discussion)
;;;
;;; Caveats:
;;;
; created 1992
START:
ring #1
#2
#3
#1[0]-#1[(#3)-1]
;
;
END:
incr-set prlevel -1

